/* pages/refundRefund/refundRefund.wxss */
page {
    background: #161824;
}

.cont_count {
    padding-top: 6rpx;
    position: relative;
    text-align: center;
    margin: 0 auto;
    margin-top: 25rpx;
    background-color: #1D1F2B;
}
.cont_Image{
	width: 750rpx;
	height: 1090rpx;
	margin-top: -20rpx;
}
.navbar {
    display: flex;
    background: #161824;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
    width: 750rpx;
}

.none_tab {
    position: relative;
    top: 20rpx;
    color: #999;
    font-size: 32rpx;
}

/* 默认选中菜单 */

.navbar .item {
    position: relative;
    flex: auto;
    font-size: 27rpx;
    width: 100rpx;
    text-align: center;
    line-height: 80rpx;
    color:rgba(255,255,255,0.6);
    border-bottom: 6rpx solid #161824;
}

/* 选中菜单样式 */

.navbar .item.active {
    color: rgba(225, 255, 255, 0.9);
}

/* 编号 */

.seria {
    position: relative;
    display: inline-block;
    width: 90%;
    height: 70rpx;
    line-height: 70rpx;
    /* background-color: yellow; */
}

/* 订单lab */

.seriac_name {
    position: absolute;
    font-size: 28rpx;
    color: rgba(225, 255, 255, 0.9);
    left: 0rpx;
}

.seriac_name image {
    width: 27rpx;
    height: 27rpx;
}

.seriac_name text {
    margin-left: 15rpx;
}

/* 订单状态 */

.seriac_start {
    position: absolute;
    right: 0rpx;
    color: #d33d3c;
    font-size: 28rpx;
}

.seriac_start image {
    width: 37rpx;
    height: 37rpx;
}

/* 列表 */

.list {
    position: relative;
    width: 90%;
    display: inline-block;
    padding-bottom: 10rpx;
    height: 175rpx;
}

/* 按钮颜色 */

.color {
    color: #d33d3c !important;
    border: 1rpx solid #d33d3c;
}
/* 列表图片 */

.list_img {
    position: absolute;
    width: 144rpx;
    height: 144rpx;
    left: 0rpx;
    top: 30rpx;
	border-radius: 8rpx;
}
/* 列表标题 */

.list_name {
    position: absolute;
    text-align: left;
    top: 30rpx;
    left: 180rpx;
    color: rgba(225, 255, 255, 0.9);
    width: 350rpx;
    font-size: 28rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}

/* 规格 */

.list_ions {
    position: absolute;
    text-align: left;
    top: 70rpx;
    left: 180rpx;
    color: rgba(255, 255, 255, 0.6);
    width: 350rpx;
    font-size: 24rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}

/* 列表价格 */

.list_money {
    position: absolute;
    font-size: 32rpx;
    left: 170rpx;
    bottom: 30rpx;
    color: #d33d3c;
}
/* 总和 */

.count_eg {
    position: relative;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
}

/* 总和居中 */

.count_cent {
    position: relative;
    width: 90%;
    display: inline-block;
    height: 90rpx;
    line-height: 90rpx;
}

/* 商品数量 */

.cont_cent_name {
    position: relative;
    font-size: 28rpx;
    float: right;
}

.cont_ce_mon {
    font-size: 32rpx;
    color: #d33d3c;
}

/* 总计金额 */

.cont_cen_money {
    position: relative;
    font-size: 28rpx;
    margin-right: 15rpx;
    margin-left: 15rpx;
    float: right;
	color: rgba(255, 255, 255, 0.6)
}

/* 标签功能 */

.coent_list {
    width: 700;
    height: 130rpx;
    line-height: 130rpx;
    border-radius: 24rpx;
    margin: 0 auto;
}
/* 标签按钮 */
.coent_del {
    float: right;
    margin-right: 20rpx;
    display: inline-block;
    width: 170rpx;
    text-align: center;
    height: 68rpx;
    border:1px solid rgba(255,255,255,0.4);
    font-size: 28rpx;
    line-height: 68rpx;
    margin-top: 35rpx;
    border-radius: 10rpx;
    color: rgba(255,255,255,0.4);
}
/* 到达底部 */
.cont_bottom {
  padding-top: 6rpx;
    width: 700rpx;
    text-align: center;
    margin: 0 auto;
    margin-top: 25rpx;
	 margin-bottom: 25rpx;
	height: 100rpx;
	line-height: 100rpx;
	color:rgba(153,153,153,1);
	font-size: 24rpx;
}
