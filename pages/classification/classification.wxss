/* pages/classification/classification.wxss */

.clearfix {
    zoom: 1;
}

.clearfix:after {
    display: block;
    clear: both;
    content: '\20';
}

.clearfix:before, .clearfix:after {
    content: " ";
    display: table;
}

.clearfix:after {
    clear: both;
}

.toplist {
    width: 80%;
    margin: 0 auto;
	line-height: 55rpx;
}

.toplist view {
    float: left;
    font-size: 32rpx;
