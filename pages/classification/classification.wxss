    color: rgba(155, 155, 155, 1);
    margin-right: 29rpx;
}

.animation-button image {
    width: 40rpx;
    height: 40rpx;
}

.small_nav {
    background: #161721;
    font-size: 26rpx;
    margin-bottom: 20rpx;
	margin-top: -5rpx;
}

.small_nav_scroll {
    display: flex;
    height: 80rpx;
    line-height: 80rpx;
    flex-direction: column;
    flex-wrap: wrap;
}

.small_nav_scroll>view {
    padding: 0 5rpx;
    margin: 0 25rpx;
    text-align: center;
    position: relative;
    font-size: 26rpx;
    /* font-weight: bold; */
    color: #fff;
    text-shadow: 0px 1px 2px rgba(0, 0, 0, 0.3);
}

.small_nav_scroll>view.cur {
    font-size: 26rpx;
    font-weight: 500;
    color: #f7f7f7;
    text-shadow: 0px 1px 2px rgba(0, 0, 0, 0.3);
}

.small_nav_scroll>view.cur:after {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 5rpx;
    background: #f7f7f7;
}

.small_navFix {
    width: 100%;
    height: auto;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 20;
}

