/* pages/limit/limit.wxss */
.banenr image{ width: 750rpx; height: 320rpx;}
.date-list-info{ width:25%; text-align: center;color: #B3B2B2; display: inline-block}
.date-list-info text{ display: block; line-height: 40rpx;}
.date-list-info text.date{ font-weight: 600}
.date-list-info.active{ color: #CA493A}
.date-list{ overflow-x: scroll; width: auto; text-align: center; -webkit-overflow-scrolling: touch}
.products-list{ margin-top: 35rpx;}
.cont{border-radius:24rpx 24rpx 0 0;top: -20rpx; background: #161824; position: relative; padding-top: 26rpx;}
.products-info{ height: 220rpx; padding: 35rpx 0 35rpx 220rpx; margin: 0 22rpx; border-bottom: solid 2rpx #31333F; position: relative}
.products-info image{ width: 190rpx; height:190rpx; border-radius: 10rpx; position: absolute; left: 0; top: 35rpx;}
.products-name{ color: #ffffff; font-size: 28rpx;text-overflow: -o-ellipsis-lastline;overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical; margin-top: 5rpx; height: 80rpx;}
.products-icon text{ display: inline-block; width:50rpx;height:28rpx;border-radius:8rpx;border:1px solid rgba(255,255,255,0.9);  font-size: 20rpx; text-align: center; margin-right: 10rpx;color:rgba(255,255,255,0.9)}
.products-icon{ margin: 10rpx 0 35rpx 0}
.products-price{ color: #CA493A;font-weight:600;}
.products-ri{ width: 185rpx; height: 170rpx; position: absolute; right: 0; bottom: 0}
.products-ri text{ color: #B3B2B2; line-height: 60rpx; display: block; font-size: 24rpx; text-align: center}
.products-btn{width:185rpx;height:58rpx;background:rgba(202,73,58,1);border-radius:34rpx; text-align: center; color: #fff;line-height: 58rpx; font-size: 30rpx;}
::-webkit-scrollbar {width: 0;height: 0;color: transparent;}