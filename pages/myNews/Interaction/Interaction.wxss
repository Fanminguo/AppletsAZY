/* pages/myNews/Interaction/Interaction.wxss */
page {
    background: #161824;
}

.empty image {
    display: block;
    margin: 0 auto;
    margin-top: 190rpx;
    width: 530rpx;
    height: 334rpx;
}

.empty .view {
    margin: 0 auto;
    margin-top: 108rpx;
    font-size: 34rpx;
    color: rgba(255, 255, 255, 0.9);
    text-align: center;
    height: 48rpx;
    line-height: 48rpx;
}

.empty .text {
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.6);
    line-height: 40rpx;
    margin-top: 20rpx;
    text-align: center;
}

.newBox {
    width: 750rpx;
    height: 298rpx;
    margin-top: 30rpx;
}

.newBox .boxText {
    width: 702rpx;
    background: #1D1F28;
    border-radius: 26rpx;
    margin: 0 auto;
    padding-bottom: 15rpx;
}

.boxText .portrait image {
    width: 76rpx;
    height: 76rpx;
    border-radius: 50%;
    float: left;
    margin-top: 20rpx;
    margin-left: 25rpx;
    margin-right: 8rpx;
}

.newBox .boxText .state {
    float: left;
    height: 76rpx;
    font-size: 28rpx;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.9);
    line-height: 76rpx;
    margin-top: 20rpx;
    margin-left: 20rpx;
    margin-bottom: 10rpx;
}

.replyYou {
    float: left;
    font-size: 24rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.6);
    height: 76rpx;
    line-height: 76rpx;
    margin-top: 20rpx;
    margin-left: 20rpx;
    margin-bottom: 10rpx;
}

.newBox .boxText .boxImg {
    float: left;
    margin-top: 35rpx;
}

.newBox .boxText .boxImg image {
    width: 124rpx;
    height: 124rpx;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 16rpx;
    margin-left: 20rpx;
}

.boxName {
    width: 467rpx;
    margin-left: 25rpx;
    float: left;
    margin-top: 35rpx;
}

.boxName .name {
    height: 120rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.9);
    line-height: 40rpx;
    -webkit-line-clamp: 3;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}

.boxName .btn {
    height: 40rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: #9b9b9b;
    line-height: 40rpx;
    margin-top: 10rpx;
}