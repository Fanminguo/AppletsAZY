.rank-info-hot{color:rgba(255,255,255,0.9);font-size:26rpx; font-weight: bold}
.iconnum{ position: absolute;left: 15rpx; top: 106rpx; color: #9B9B9B; font-size: 32rpx; font-weight: bold}
.rank-info.store{ height: 100rpx; padding: 25rpx 0 25rpx 225rpx}
.rank-info.store .rank-info-img{ width: 100rpx; height: 100rpx; border-radius: 50%; top: 25rpx;}
.rank-info.store .icon1, .rank-info.store .icon2,.rank-info.store .icon3{ top: 49rpx;}
.rank-info.store .rank-info-name{ height: 37rpx; margin-bottom: 10rpx}
.rank-store-text{ color: #9B9B9B; font-size: 20rpx;height: 30rpx;line-height: 17rpx;}
.rank-store-text text{color:rgba(255,255,255,0.9); font-size: 28rpx; margin-left: 20rpx; display: inline-block}
.rank-recom{ float: left; width: 226rpx; margin-right: 13rpx; margin-bottom: 40rpx;background:rgba(255,255,255,0.05); padding-bottom: 10rpx;}
.rank-recom-img{width:226rpx;height:402rpx; position: relative}
.rank-recom-img image{width:226rpx;height:402rpx;border-radius:8px;}
.rank-recom-img .zan{width:208rpx;height:68rpx; line-height: 68rpx;background:linear-gradient(180deg,rgba(0,0,0,0) 0%,rgba(0,0,0,0.5) 100%);border-radius:0px 0px 8px 8px; position: absolute; bottom: 0; left: 0; color: #fff; font-size: 26rpx; padding-right: 18rpx;
text-align: right}
.rank-recom-name{ font-size: 24rpx;text-overflow: -o-ellipsis-lastline;overflow: hidden;text-overflow: ellipsis;display: -webkit-box;
