.rank-banner{ height: 320rpx; position: relative}
.rank-banner image{ width: 100%; height: auto}
.rank-data{ position: absolute; color: #fff; font-size: 24rpx; width: 700rpx; left: 25rpx; bottom: 35rpx; line-height: 33rpx;}
.rank-cont{height:800rpx;border-radius:26rpx 26rpx 0px 0px;top:-20rpx; position: relative; padding-top: 23rpx;}
.rank-info{ height: 185rpx; padding: 35rpx 0 35rpx 249rpx; position: relative; margin: 0 22rpx; border-bottom: solid 2rpx #31333F}
.rank-info-img{ width: 110rpx; height: 185rpx; border-radius: 8rpx; position: absolute; left: 103rpx; top: 35rpx;}
.rank-info .icon1{ width:48rpx; height: 53rpx; background: url("https://bj.aizhiyi.com/wap/test/wap/xcxImg/71.png") no-repeat center center; background-size: cover; left: 8rpx; top: 106rpx; position: absolute}
.rank-info .icon2{ width:48rpx; height: 53rpx; background: url("https://bj.aizhiyi.com/wap/test/wap/xcxImg/72.png") no-repeat center center; background-size: cover; left: 8rpx; top: 106rpx; position: absolute}
.rank-info .icon3{ width:48rpx; height: 53rpx; background: url("https://bj.aizhiyi.com/wap/test/wap/xcxImg/73.png") no-repeat center center; background-size: cover; left: 8rpx; top: 106rpx; position: absolute}
.rank-info-name{text-overflow: -o-ellipsis-lastline;overflow: hidden;text-overflow: ellipsis;display: -webkit-box;
