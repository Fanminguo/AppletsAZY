/* pages/groupOrder/groupOrder.wxss */

/* 订单列表 */

page {
    background: #161824;
}

/* 清除浮动 */

.clearfix {
    zoom: 1;
}

.clearfix:after {
    display: block;
    clear: both;
    content: '\20';
}

.clearfix:before, .clearfix:after {
    content: " ";
    display: table;
}

.clearfix:after {
    clear: both;
}

.u-wrp-bnr {
    width: 100%;
    height: 400rpx;
    display: block;
    position: relative;
    top: 100rpx;
    background: #f0f0f0;
}

.u-img-slide {
    width: 100%;
    height: inherit;
}

.orderList {
    width: 710rpx;
    background: #1D1F28;
    border-radius: 12rpx;
    margin: 0 auto;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}

.orderList .topName {
    height: 85rpx;
}

.orderList .topName image {
    width: 41rpx;
    height: 41rpx;
    margin: 25rpx 24rpx 0 19rpx;
    float: left;
    line-height: 85rpx;
}

.orderList .topName .shopName {
    float: left;
    font-size: 28rpx;
    font-weight: 500;
    color:rgba(255,255,255,0.9);
    line-height: 85rpx;
}

.orderList .topName .orderState {
    float: right;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(211, 61, 60, 1);
    line-height: 85rpx;
    margin-right: 25rpx;
}

.introduction {
    border-bottom: 1rpx solid #31333F;
}

.introduction .imgName image {
    width: 190rpx;
    height: 219rpx;
    border-radius: 8rpx;
    margin: 22rpx 20rpx 33rpx 22rpx;
    float: left;
}
.orderText {
	margin-left: 237rpx;
}
.orderText .comName {
    float: right;
    width: 448rpx;
    height: 89rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: #FFFFFF;
    line-height: 42rpx;
    margin-right: 21rpx;
    margin-top: 21rpx;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
	
}

.orderText .fications {
    font-size: 24rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(185, 185, 185, 1);
	margin-left: 8rpx;
}

.price {
    padding: 20rpx 0 20rpx 20rpx;
	margin-left: 217rpx;
}

.price .money {
    float: left;
    font-size: 32rpx;
    font-weight: 600;
    width: 250rpx;
    color: rgba(202, 73, 58, 1);
    padding-top: 30rpx;
}

.price .money text {
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(179, 178, 178, 1);
    text-decoration: line-through;
}

.price .number {
    float: right;
    margin-right: 20rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(179, 178, 178, 1);
    padding-top: 33rpx;
}

.btnOrder {
    height: 120rpx;
    line-height: 120rpx;
}

.btnOrder .time {
    float: left;
    margin-left: 20rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Medium;
    font-weight: 500;
    color: rgba(98, 98, 98, 1);
}

.btnOrder .details {
    float: right;
    margin-right: 20rpx;
    width: 170rpx;
    height: 68rpx;
    text-align: center;
    font-size: 30rpx;
    color: rgba(202, 73, 58, 1);
    line-height: 68rpx;
    border-radius: 12rpx;
    border: 1px solid rgba(202, 73, 58, 1);
    margin-top: 20rpx;
}
.btnOrder .details1 {
	color: #B3B2B2 !important;
	 border:1px solid #B3B2B2 !important;
}
/* 底部tab */

.dibuTab {
    position: fixed;
    bottom: 0;
    font-size: 32rpx;
    font-family: PingFangSC-Medium;
    font-weight: 500;
    width: 100%;
    background: #161824;
    height: 90rpx;
    line-height: 90rpx;
    box-shadow: 0px 1px 6px 0px rgba(0, 0, 0, 0.2);
