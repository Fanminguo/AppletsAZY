    color:rgba(255,255,255,0.9);
}


.active {
    color: rgba(202, 73, 58, 1) !important;
}

/* 底部 */

.remind {
    height: 186rpx;
    line-height: 118rpx;
    text-align: center;
    font-size: 24rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(153, 153, 153, 1);
}

