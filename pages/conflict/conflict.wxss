/* pages/conflict/conflict.wxss */
.topInformation {
    width: 678rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(235, 237, 246, 1);
    margin: 0 auto;
    padding: 25rpx 42rpx 25rpx 30rpx;
    background: rgba(29, 31, 43, 1);
}

.accountList {
    width: 720rpx;
    margin-left: 30rpx;
    border-bottom: 2rpx solid rgba(255, 255, 255, 0.05);
    margin-top: 36rpx;
}

.img-portrait {
    width: 142rpx;
    height: 178rpx;
    margin-top: 39rpx;
    margin-right: 9rpx;
}

.img-portrait image {
    width: 100rpx;
    height: 100rpx;
    border: 3rpx solid rgba(255, 255, 255, 0.8);
    border-radius: 50%;
    margin-top: 9rpx;
    margin-left: 21rpx;
}

.accountList .text {
    font-size: 30rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: rgba(235, 237, 246, 1);
    margin-left: 30rpx;
}

.left-content {
    margin-top: 39rpx;
}
.radio{
    margin-top: 80rpx;
    margin-right: 50rpx;
}

.left-content .name {
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(235, 237, 246, 1);
    margin-bottom: 8rpx;
}

.left-content .content-text {
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(170, 174, 185, 1);
}
.btn-bottom{
    position: fixed;
    bottom: 40rpx;
    left: 0;
    width: 750rpx;
    height: 220rpx;
}
.btn-Cancellation {
    width: 680rpx;
    height: 88rpx;
    background: rgba(202, 73, 58, 1);
    box-shadow: 0 1rpx 2rpx 0 rgba(0, 0, 0, 0.2);
    border-radius: 16rpx;
    line-height: 88rpx;
    margin: 0 auto;
    text-align: center;
    color: #FFFFFF;
}
.btn-replace{
    width:680rpx;
    height:88rpx;
    background:rgba(255,255,255,1);
    box-shadow:0 1rpx 2rpx 0 rgba(0,0,0,0.2);
    border-radius:16rpx;
    margin: 0 auto;
    margin-top:15rpx;
    text-align: center;
    line-height: 88rpx;
    color: #3E3535;
}
.shanchu{
    text-decoration:line-through
}
