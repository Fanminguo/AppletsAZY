/* pages/recomShop/recomShop.wxss */
@import '../follows/follows.wxss';
page {
    background: #161824;
}
/* 删除 */
.products-inner-price {
position: absolute;
    left: 0;
    bottom: 8rpx;
    width: 92%;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.4) 100%);
    height: 68rpx;
    line-height: 68rpx;
    color: #fff;
    padding: 0 4%;
    }
    
.delete {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
}

.delete image {
    width: 44rpx;
    height: 44rpx;
}

/* 底部 */

.bottom {
    width: 750rpx;
    height: 100rpx;
    font-size: 24rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.5);
    line-height: 100rpx;
    text-align: center;
}

/* 瀑布流 */

/* 列表 */

.commList {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
}

.commSingle {
    width: 346rpx;
    box-sizing: border-box;
}

.commList .commSingle .listBox .likeLove {
    width: 346rpx;
    height: 68rpx;
    font-size: 28rpx;
    color: rgba(255, 255, 255, 1);
    line-height: 68rpx;
    position: absolute;
    bottom: 10rpx;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.2) 100%);
}

.listBox {
	width: 346rpx;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8rpx;
    overflow: hidden;
    margin-bottom: 15rpx;
    /* padding-bottom: 20rpx; *//* box-shadow: rgb(231, 229, 229) 10rpx 10rpx 30rpx 5rpx; */
}

.relative {
    position: relative;
}

.loveLeft {
    margin-left: 20rpx;
}

.loveLeft>image {
    width: 26rpx;
    height: 22rpx;
    margin-right: 5rpx;
}

.moneyRight {
    margin-right: 40rpx;
    font-size: 32rpx;
}

/* 商品介绍 */

.introDuce {
    width: 317rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    margin: 0 auto;
    font-size: 28rpx;
    color: rgba(255, 255, 255, 0.9);
    padding: 22rpx 14rpx 30rpx 15rpx;
}

.commList .commSingle .listBox .relative .loevImg {
    height: 330rpx;
    width: 100%;
}

.commList .commSingle .listBox .relative .loevImg1 {
    height: 587rpx;
    width: 100%;
}
