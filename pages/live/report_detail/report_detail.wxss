/* 顶部提示 */

.introduce {
  display: block;
 background:rgba(255,255,255,0.05);
}

.introduce text {
  font-size: 24rpx;
  line-height: 70rpx;
  color: #d33d3c;
  text-indent: 30rpx;
  text-align: center;
  display: block;
  margin: 0 auto;
}

/* 类型 */

.wrapInp {
  width: 750rpx;
  height: 100rpx;
  background:#1D1F2B;
  margin-top: 30rpx;
}

.wrapInp .inpType {
  display: inline-block;
  font-size: 28rpx;
 color:rgba(255,255,255,0.9);
  text-align: left;
  line-height: 100rpx;
  margin-left: 30rpx;
  float: left; margin-right: 20rpx;
}

.wrapInp .inpType text {
  color: #d33d3c;
}

.picker {
  width: 70%;
  height: 100rpx;
  line-height: 100rpx;
  color: rgba(255,255,255,0.9); font-size: 28rpx;
}

.textInp {
  color: #bbb;
background:rgba(255,255,255,0.05);
}

/* 退款原因 text */

.reasonText {
  width: 750rpx;
  background:#1D1F2B;
  height: 235rpx;
}

.reasonText textarea {
  width: 700rpx;
  font-size: 28rpx;
  margin: 0 auto;
  height: 180rpx;
color: #fff;
}

