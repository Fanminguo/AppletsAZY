   <view class="gocart" bindtap="gocart">
    <view wx:if="{{caetNum > 0 && caetNum<=9 }}" class="cartNum2">{{caetNum}}</view>
		<view wx:if="{{caetNum > 9}}" class="cartNum">{{caetNum}}</view>
   </view>
   <button open-type='share' data-id="" class='share'></button>
