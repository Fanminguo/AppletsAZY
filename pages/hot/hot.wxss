.hot-banner{ width: 700rpx; height: 220rpx; display: block; margin: 17rpx auto 40rpx; border-radius: 20rpx;}
.list{ width: 700rpx; margin: 0 auto}
.hot{ float: left; width: 224rpx; margin-left: 13rpx; background:rgba(255,255,255,0.05); border-radius: 15rpx }
.list-inner .hot:nth-child(1){ margin-left: 0}
.hot-name{overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp:2;-webkit-box-orient: vertical; }
.hot-image { position: relative; border-radius: 15rpx 15rpx 0 0; overflow:hidden;}
.hot-image image{ width: 224rpx; height: 400rpx; display: block}
.list-top{ height: 40rpx; line-height: 40rpx;}
.list-more{ font-size: 26rpx;color:rgba(255,255,255,0.9);}
.list-top{ color: #3E3535; font-size: 32rpx; margin-bottom: 40rpx;}
.hot-name{ font-size: 24rpx; height: 64rpx; line-height: 33rpx; margin-top: 10rpx;color:rgba(255,255,255,0.9); padding: 0 0 0 10rpx }
.group-icon{ width: 36rpx; height: 43rpx; margin: 0 12rpx 0 0; position: relative; top: 8rpx}
.limit-icon{width: 44rpx; height: 44rpx; margin: 0 12rpx 0 0; position: relative; top: 8rpx}
.products-inner-price { font-size: 26rpx;position: absolute;left: 0;bottom: 0;width: 92%;
background: linear-gradient(180deg,rgba(0,0,0,0) 0%,rgba(0,0,0,0.2) 100%);height: 68rpx;line-height: 68rpx;color: #fff;padding: 0 4%;
}
.products-inner-price image{ width: 52rpx; height: 48rpx;display: inline-block; margin-right:10rpx; position: relative; top: 10rpx}
.list-top-title{color:rgba(255,255,255,0.9);}