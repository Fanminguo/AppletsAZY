.clearfix {
    zoom: 1;
}

.clearfix:after {
    display: block;
    clear: both;
    content: '\20';
}

.clearfix:before, .clearfix:after {
    content: " ";
    display: table;
}

.clearfix:after {
    clear: both;
}

