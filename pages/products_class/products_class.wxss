.class-nav{ width:180rpx; float:left;color:rgba(255,255,255,0.6); margin: 0 0 0 0rpx; font-size: 28rpx; text-align: center;
line-height: 100rpx; overflow-y: scroll}
.class-list{ width: 570rpx; float: right; margin: 0 0 0 0rpx; background:#1D1F2B}
.class-list-title{ font-size: 28rpx; color:rgba(255,255,255,0.9); padding: 38rpx 0 42rpx; margin: 0 20rpx; text-align: center}
.class-list-title.all{border-top: solid 1rpx #D8D8D8}
.hot-list-inner{ float:left; width: 33.3%; text-align: center; color: #666666; font-size: 24rpx; margin-bottom: 40rpx;}
.hot-list-inner image{ width: 100rpx; height: 100rpx; display: block; margin: 0 auto 24rpx; border-radius: 50%;}
.hot-list-inner text{ display: block; overflow: hidden;text-overflow: ellipsis;white-space: nowrap; padding: 0 15rpx; color:rgba(255,255,255,0.8);}
.class-nav-lsit view.active{ color:rgba(255,255,255,0.9); background: #1D1F2B; position: relative}
.class-nav-lsit view.active:after {content: '';position: absolute;width: 6rpx;height: 50rpx;left: 0;top: 25rpx; background:#CA493A}
