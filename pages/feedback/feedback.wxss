/* pages/feedback/feedback.wxss */
.feed-inner{width:170rpx;height:60rpx;border-radius:8rpx; color:rgba(255,255,255,0.9);font-size: 30rpx; line-height: 60rpx;
float:left; margin-right: 58rpx;text-align: center; margin-bottom: 20rpx;border:1px solid #1D1F28; background: #1D1F28}
.feed-list{ margin: 0 0 0 35rpx;}
.feed-inner.active{ color: #CA493A;border:1px solid #CA493A}
.feed-text{ width:678rpx;height:393rpx;background:rgba(29,31,40,1);border-radius:29rpx; margin: 30rpx auto 0}
.areas{ width: 600rpx; height: 300rpx; margin: 0 auto;  padding-top: 30rpx; color: #fff}
.feed-text-num{ text-align: right; margin-right: 20rpx; color: #C8C7C9}
.feed-cont{padding: 50rpx 0 35rpx 0; border-radius: 0 0 26rpx 26rpx;}
.tel-cont{height:88rpx; line-height: 88rpx;box-shadow:0px 0px 10rpx 0px rgba(0,0,0,0.08); background: #1D1F28; padding: 0 35rpx;
