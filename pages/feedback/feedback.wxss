.tel-text{ display: inline-block; position: relative; top:10rpx; color: #fff;}
.submit{width:680rpx;height:88rpx; font-size: 30rpx; line-height: 88rpx; text-align: center; color: #fff;background:#CA493A;
border-radius:44rpx; margin: 0 auto}
.currentWordNumber{ color: #C8C7C9}
.tel-cont text{color:rgba(255,255,255,0.9);}