/* pages/search/search.wxss */

page {
    background: #161824;
}

.SearchBox {
    /* position: fixed; *//* top: 0; */
    background: #161824;
    z-index: 99;
    height: auto;
}

.Search_input_top_box {
    margin-top: 12rpx;
    position: relative;
    margin-bottom: 16rpx;
}

.Search_Input {
    width: 600rpx;
    height: 68rpx;
    border-radius: 30rpx;
    background: rgba(255, 255, 255, 0.1);
    /* border: 2rpx solid #bbb; */
    margin-left: 20rpx;
    display: inline-block;
    vertical-align: middle;
    padding-left: 58rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: #a1a2a7;
}

.Search_btn {
    display: inline-block;
    width: 130rpx;
    height: 58rpx;
    font-size: 30rpx;
    color: rgba(255, 255, 255, 0.85);
    /* margin-top: 18rpx; */
    vertical-align: middle;
    line-height: 58rpx;
    text-align: center;
}

.Search_ico {
    width: 100%;
    height: 100%;
}

.Search_ico_box {
    position: absolute;
    left: 40rpx;
    top: 14rpx;
    width: 23rpx;
    height: 28rpx;
    z-index: 999;
}

.Search_record_text>text {
    font-size: 30rpx;
    color:rgba(255,255,255,0.85);
    margin-left: 20rpx;
}

.hot_box_text {
    margin-top: 40rpx;
}

.History-list {
    margin-left: 20rpx;
    margin-top: 28rpx;
    margin-right: 20rpx;
}

.History-list>text {
    display: inline-block;
    height: 58rpx;
    border-radius: 29px;
    background: rgba(255, 255, 255, 0.05);
    max-width: 100%;
    padding-left: 24rpx;
    padding-right: 24rpx;
    line-height: 58rpx;
    font-size: 24rpx;
    color:rgba(255,255,255,0.8);
    margin-bottom: 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    box-sizing: border-box;
    margin-right: 20rpx;
}

.color {
    color: rgba(255, 255, 255, 0.9);
}

.recomList {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8rpx;
}

.dele {
    width: 32rpx;
    height: 32rpx;
    position: relative;
    right: 60rpx;
}
.dele image{
    width: 32rpx;
    height: 32rpx;
}
.fr {
    float: right;
}

/* 搜索列表 */

.Search_xian {
    width: 100%;
    background: #dcdcdc;
    margin-bottom: 32rpx;
}

.Search_xian .scrollView {
    background: #fff;
}

.Search_xian .scrollView view {
    background: rgba(22, 24, 36, 1);
    height: 93rpx;
    width: 730rpx;
    border-bottom: 1rpx solid rgba(49, 51, 63, 1);
    line-height: 93rpx;
    padding-left: 20rpx;
    color: rgba(255, 255, 255, 0.85);
    font-size: 24rpx;
}

/* 商品热搜榜 */

.boxSearch {
    width: 732rpx;
    margin: 0 auto;
    /* margin-top: 100rpx; *//* position: relative; *//* top: 152rpx; */
}

.boxSearch .search {
    height: 100rpx;
    font-size: 32rpx;
    font-weight: 500;
    color: rgba(44, 44, 44, 1);
    line-height: 100rpx;
}

.boxSearch .search .topSearch {
    float: left;
    width: 300rpx;
}

.boxSearch .search .topSearch image {
    float: left;
    width: 33rpx;
    height: 36rpx;
    margin-top: 33rpx;
    margin-right: 10rpx;
    margin-left: 10rpx;
}

.rightBtn {
    float: right;
    width: 150rpx;
    font-size: 26rpx;
    font-weight: 500;
    color: rgba(155, 155, 155, 1);
}

.rightBtn image {
    width: 34rpx;
    height: 34rpx;
    float: right;
    margin-top: 35rpx;
}

.searchList {
    position: relative;
    width: 226rpx;
    height: 226rpx;
    float: left;
    margin-left: 15rpx;
}

.searchList .orderList .orderImg {
    width: 226rpx;
    height: 226rpx;
    border-radius: 20rpx;
    margin-right: 10rpx;
}

.likeImg image {
    width: 23rpx;
    height: 32rpx;
    float: left;
}

.likeImg {
    position: absolute;
    bottom: 5rpx;
    right: 20rpx;
    float: left;
    margin-bottom: 10rpx;
}

.likeImg image {
    margin-right: 5rpx;
}

.likeImg view {
    font-size: 26rpx;
    font-weight: 500;
    color: rgba(255, 255, 255, 1);
    text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
    float: left;
}

/* 店铺人气榜 */

.popularityList {
    width: 346rpx;
    height: 189rpx;
    background: linear-gradient(136deg, rgba(252, 208, 159, 1) 0%, rgba(184, 111, 59, 1) 100%);
    box-shadow: 0 0 3rpx 0 rgba(0, 0, 0, 0.3);
    border-radius: 16rpx;
    float: left;
    margin-right: 10rpx;
    margin-left: 10rpx;
    margin-bottom: 15rpx;
}

.orange {
    background: linear-gradient(180deg, rgba(250, 217, 97, 1) 0%, rgba(247, 107, 28, 1) 100%) !important;
}

.blue {
    background: linear-gradient(180deg, rgba(105, 192, 255, 1) 0%, rgba(74, 144, 226, 1) 100%) !important;
}

.darkBlue {
    background: linear-gradient(135deg, rgba(126, 162, 246, 1) 0%, rgba(95, 104, 234, 1) 100%) !important;
}

.popularityList .boxName {
    height: 60rpx;
    line-height: 35rpx;
}

.popularityList .boxName .name {
    font-size: 28rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: rgba(255, 255, 255, 1);
    float: left;
    margin: 14rpx 0 0 24rpx;
}

.popularityList .boxName image {
    width: 13rpx;
    height: 23rpx;
    float: right;
    margin: 18rpx 18rpx 0 0;
}

/* 人气榜 内容 */

.content {
    width: 310rpx;
    margin: 0 auto;
}

.content .contentImg {
    float: left;
    margin: 25rpx 0 0 0;
}

.content .contentImg image {
    width: 87rpx;
    height: 88rpx;
    border-radius: 50%;
}

.content .sortContent {
    float: right;
    margin-top: 25rpx;
}

.content .sortContent .sort {
    font-size: 28rpx;
    font-weight: 500;
    color: rgba(255, 255, 255, 1);
    margin-bottom: 11rpx;
}

.content .sortContent .sortText {
    font-size: 24rpx;
    font-family: PingFangSC-Medium;
    font-weight: 500;
    color: rgba(255, 255, 255, 1);
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    width: 200rpx;
}
.recommend {
    height: 226rpx;
    width: 226rpx;
    position: relative;
    float: left;
    margin-left: 12rpx;
}

.recommend .recomList .orderImg {
    width: 226rpx;
    height: 226rpx;
    background: rgba(216, 216, 216, 1);
    border-radius: 8rpx;
}

.recommend .recomList .loveNum {
    width: 226rpx;
    height: 68rpx;
    line-height: 68rpx;
    position: absolute;
    bottom: 0rpx;
}

.recommend .recomList .loveNum image {
    width: 35rpx;
    height: 35rpx;
    float: right;
    margin-top: 20rpx;
    margin-right: 8rpx;
    
}

.recommend .recomList .loveNum view {
    float: right;
    font-size: 26rpx;
    font-weight: 500;
    color: rgba(255, 255, 255, 1);
    text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
    margin-right: 20rpx;
}

.recommend .recomList .nameBrief {
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.9);
    padding: 11rpx 10rpx;
    margin-bottom: 30rpx;
}

.recommend .recomList .nameBrief  text {
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    height: 101rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
	margin-top: -40rpx;

}
