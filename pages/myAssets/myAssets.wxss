@keyframes kf-marque-animation{ 0% { transform: translateY(0); } 100% { transform: translateY(-100%); } }
.marquee{
    border: none;
    display: block;
    margin: 0 auto;
    overflow: hidden;
    width: 730rpx;
    position: relative;
    margin-top: 20rpx;
}
.marquee .marquee-content{
    display: inline-block;
    position: relative;
    animation: kf-marque-animation 70s linear infinite;
    white-space: nowrap;
    width: 730rpx;

  } 
