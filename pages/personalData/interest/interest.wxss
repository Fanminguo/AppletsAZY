.text {
    height: 33rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.6);
    line-height: 33rpx;
    margin-left: 36rpx;
    margin-top: 20rpx;
}

/* 大盒子 */

.boxView {
    width: 730rpx;
    height: 100%;
    background: rgba(29, 31, 43, 1);
    border-radius: 8rpx;
    margin: 0 auto;
    margin-top: 5rpx;
}

/* 单个模块 */

.singleView {
    width: 678rpx;
}

/* 大标题 */

.topText {
    height: 40rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.9);
    line-height: 40rpx;
    padding: 26rpx 0 28rpx 26rpx;
}

/*二级标签  */

.second {
    width: 27%;
    height: 65rpx;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    line-height: 66rpx;
    text-align: center;
    margin-left: 39rpx;
    float: left;
    margin-bottom: 39rpx;
	border: 1rpx solid rgba(255, 255, 255, 0.05);
}

/* 底部 */

.button {
    width: 750rpx;
    height: 170rpx;
    background: rgba(29, 31, 43, 1);
    z-index: 99;
    position: fixed;
    bottom: 0px;
}

