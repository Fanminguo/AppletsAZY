/* pages/addressList/address/address.wxss */

page {
    background-color: #161824;
}

.animation-element-wrapper {
    z-index: 999;
}

/* 所在地区 */

.infoText {
    margin-top: 20rpx;
    text-align: center;
    width: 100%;
    justify-content: center;
}

picker-view {
    background-color: white;
    padding: 0;
    width: 100%;
    height: 380rpx;
    bottom: 0;
    position: fixed;
}

picker-view-column view {
    vertical-align: middle;
    font-size: 28rpx;
    line-height: 28rpx;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* ----------------------------------------- */

.animation-element-wrapper {
    display: flex;
    position: fixed;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.6);
}

.animation-element {
    display: flex;
    position: fixed;
    width: 100%;
    height: 470rpx;
    bottom: 0;
    background-color: rgba(255, 255, 255, 1);
}

.animation-button {
    margin-top: 20rpx;
    top: 20rpx;
    width: 400rpx;
    height: 100rpx;
    line-height: 100rpx;
    align-items: center;
}

text {
    color: #999;
    display: inline-flex;
    position: fixed;
    margin-top: 20rpx;
    height: 50rpx;
    text-align: center;
    line-height: 50rpx;
    font-size: 34rpx;
    font-family: Arial, Helvetica, sans-serif;
}

.left-bt {
    left: 30rpx;
}

.right-bt {
    right: 30rpx;
}

.line {
    display: block;
    position: fixed;
    height: 1rpx;
    width: 100%;
    margin-top: 89rpx;
    background-color: #eee;
}

/* 收货人 */

.consignee {
    height: 90rpx;
    line-height: 90rpx;
}

.consignee .consigneeName {
    /* text-align: right; */
    width: 150rpx;
    font-size: 28rpx;
    font-weight: 400;
    color:rgba(255,255,255,0.9);
    float: left;
    margin-left: 50rpx;

}

.consignee .address {
    width: 480rpx;
    height: 80rpx;
    font-size: 28rpx;
    font-weight: 400;
    padding-top: 4rpx;
    /* padding-left: 220rpx; */
}
.textColor1{
    color: rgba(255, 255, 255,1);

}
.textColor{
    color: rgba(255, 255, 255,0.4);
}
.consignee .peopleName {
    width: 550rpx;
    height: 80rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: #D9D6D6;
    padding-top: 9rpx;
    /* padding-left: 70rpx; */
}

/* 收货地址 */

.add {
    position: relative;
}

.animation-button {
    width: 464rpx;
    height: 80rpx;
    position: absolute;
    top: -8rpx;
    right: 75rpx;
    opacity: 0;
}

/* 默认 */

.default {
    width: 700rpx;
    margin: 0 auto;
    margin-left: 40rpx;
    margin-top: 30rpx;
}

.default .circular {
    width: 36rpx;
    height: 36rpx;
    border: 2rpx solid rgba(206, 205, 205, 1);
    border-radius: 50%;
    float: left;
    margin-right: 20rpx;
	text-align: center;
	line-height: 36rpx;
	font-size: 0;
}

.default .defaText {
    font-size: 27rpx;
    font-weight: 400;
    color: rgba(202, 73, 58, 1);
    padding-top: 8rpx;
}

.active {
    width: 36rpx;
    height: 36rpx;
    border: 2rpx solid rgba(202, 73, 58, 0);
    border-radius: 50%;
    float: left;
    margin-right: 20rpx;
    background: url(https://bj.aizhiyi.com/wap/test/wap/xcxImg/p_xuanzhong.png) no-repeat center; background-size: cover;
	color: #fff;
	font-size: 28rpx;
	text-align: center;
	line-height: 36rpx;
}

.btnPreservation {
    width: 750rpx;
}

.btnPreservation view {
    width: 702rpx;
    height: 80rpx;
    background: rgba(202, 73, 58, 1);
    border-radius: 40rpx;
    line-height: 80rpx;
