/* pages/addressList/addressList.wxss */
page {
	background: #161824;
}

.addList {
	width: 750rpx;
	height: 143rpx;
	background: #1D1F28;
	border-radius: 12rpx;
	position: relative;
	top: 10rpx;
	margin-top: 10rpx;
}

.addList .addressName .consi {
	width: 700rpx;
	margin-left: 20rpx;
	padding-top: 20rpx;
	/* margin-top: 30rpx; */
	font-size: 28rpx;
	font-family: PingFangSC-Medium;
	font-weight: 500;
	color: rgba(255, 255, 255, 0.9);

}

.addList .addressName .consi .moren {
	width: 50rpx;
	height: 28rpx;
	font-size: 20rpx;
	font-family: PingFangSC-Regular;
	font-weight: 400;
	color: rgba(202, 73, 58, 1);
	line-height: 28rpx;
	border: 1px solid rgba(202, 73, 58, 1);
	margin-left: 20rpx;
	border-radius: 10rpx;
	padding: 0 5rpx;
}

.consi .name {
	margin-right: 20rpx;
}

.consi .consignee {
	margin-right: 20rpx;
}

.addList .addressName {
	width: 85%;
	height: 143rpx;

}

.addList .addressName .detailed {
	margin-top: 15rpx;
	margin-left: 20rpx;
	font-size: 24rpx;
	font-weight: 400;
	color: rgba(255, 255, 255, 0.6);
}

.addList .bianji {
	width: 90rpx;
	height: 45rpx;
	float: right;
	text-align: center;
	border-left: 1rpx solid #f7f7f7;
	position: absolute;
	right: 0;
	bottom: 49rpx;
	font-weight: 400;
	color: rgba(155, 155, 155, 1);
	line-height: 45rpx;
	font-size: 24rpx;
}

.botbtn {
	width: 750rpx;
	height: 100rpx;
	position: fixed;
	bottom: 20rpx;
	padding-top: 20rpx;
}

.botbtn .buttom {
	width: 702rpx;
	height: 80rpx;
	background: rgba(202, 73, 58, 1);
	border-radius: 12px;
	line-height: 80rpx;
	margin: 0 auto;
	color: #fff;
	text-align: center;
}

.addressKong {
	width: 750rpx;
	height: 100%;
	margin: 0 auto;
	margin-top: 30%;
}

.addressKong image {
	width: 530rpx;
	height: 334rpx;
	margin-left: 16%;
}

.addressKong .topText {
	font-size: 34rpx;
	color: rgba(255, 255, 255, 0.9);
	margin: 0 auto;
	margin-top: 108rpx;
	text-align: center;
}

.addressKong .text {
	font-size: 28rpx;
	color: rgba(255, 255, 255, 0.6);
	margin: 0 auto;
	margin-top: 20rpx;
	text-align: center;
}
.addressKong .text text{
	color: #EBA925;
}